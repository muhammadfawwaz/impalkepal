<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>
    #nameH2 {
        margin-top: 100px;
    }
    .btn {
        width: 100%;
    }
    </style>
</head>
<body>
    <form action="/logout" method="get">
        <input type="submit" value="Keluar" class="btn btn-danger">
    </form>
    <form action="/histori" method="get">
        <input type="submit" value="Histori Transaksi" class="btn btn-warning">
    </form>
    <form action="/keranjang" method="get">
        <input type="submit" value="Keranjang" class="btn btn-info">
    </form>
    <h2 id="nameH2">Hai <%= name %></h2>
    <table class="table table-hover">
        <thead>
            <th>Nomor</th>
            <th>Nama</th>
            <th>Harga</th>
            <th>Jumlah</th>
            <th>Aksi</th>
        </thead>
        <tbody>
            <% if(obj) { %>
                <% var i = 1 %>
                <% obj.forEach(function(obat) { %>
                    <tr>
                        <td><%= i %></td>
                        <td><%= obat.nama %></td>
                        <td><%= obat.harga %></td>
                        <td><%= obat.jumlah %></td>
                        <td>
                            <form action="/add-keranjang" method="post">
                                <input type="text" name="id" value="<%= obat.id %>" hidden>
                                <input class="form-control" type="number" name="qty" placeholder="qty" max="<%= parseInt(obat.jumlah) %>" min="1" required>
                                <input type="text" name="nama" id="" value="<%= obat.nama %>" hidden>
                                <input type="text" name="harga" id="" value="<%= obat.harga %>" hidden>
                                <input type="submit" value="Tambah ke Keranjang" class="btn btn-info">
                            </form>
                        </td>
                    </tr>
                    <% i++ %>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5">Tidak ada obat</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
